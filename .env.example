# ===========================================
# MoziBoard Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed

# --- Docker Compose (root level) ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- Backend (Go/Fiber) ---
# These are set in docker-compose.yml but can be overridden
DB_HOST=db
DB_PORT=5432
DB_USER=moziboard
DB_PASSWORD=moziboard_secret
DB_NAME=moziboard
REDIS_ADDR=redis:6379
REDIS_PASSWORD=moziboard_redis_secret

# AI Providers (optional â€” at least one needed for semantic search)
# GEMINI_API_KEY is set above
OPENAI_API_KEY=
OPENAI_BASE_URL=

# --- MCP Server (Node/Express) ---
MCP_API_KEY=your_mcp_api_key_here
API_URL=http://localhost:8080/api
